{
    "packages": {
        "pkg/common": {
            "changelog-path": "CHANGELOG.md",
            "pull-request-title-pattern": "Introducing new Package Common: ${version}",
            "extra-label": "pkg/common",
            "component": "pkg/common"
        }
    },
    "bump-minor-pre-major": true,
    "prerelease": false,
    "changelog-type": "default",
    "changelog-sections": [
        {
            "type": "feat",
            "section": "Features",
            "hidden": false
        },
        {
            "type": "fix",
            "section": "Bug Fixes",
            "hidden": false
        },
        {
            "type": "chore",
            "section": "Trivial Changes",
            "hidden": false
        },
        {
            "type": "docs",
            "section": "Documentation",
            "hidden": false
        },
        {
            "type": "deps",
            "section": "Dependencies",
            "hidden": false
        },
        {
            "type": "refactor",
            "section": "Refactors",
            "hidden": false
        }
    ],
    "tag-separator": "/",
    "release-type": "go",
    "include-component-in-tag": true,
    "separate-pull-requests": true,
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}